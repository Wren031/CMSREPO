<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#80000000"/> <!-- Shadow color -->
            <corners android:radius="5dp"/>   <!-- Same corner radius as your background -->
        </shape>
    </item>

    <!-- Actual Background -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#FFFFFF"/> <!-- Your background color -->
            <corners android:radius="5dp"/>  <!-- Corner radius -->
        </shape>
    </item>
</layer-list>
