<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4C4C4"
    tools:context=".ui.ReservationContent">

    <ImageView
        android:src="@drawable/barangay_image"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/white_bg"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Left Arrow Button -->
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/grey_bg"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_keyboard_arrow_left_24" />
        </RelativeLayout>

        <!-- Centered Breaking News Text -->
        <TextView
            android:text="Reservation Request"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black" />

        <!-- Notification Button -->
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/grey_bg"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="0dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_notifications_none_24"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </LinearLayout>






    <ImageView
        android:layout_below="@+id/top"
        android:layout_centerHorizontal="true"
        android:id="@+id/medicine_id"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:background="@drawable/white_bg"
        android:clipToOutline="true"/>



    <TextView
        android:id="@+id/certificate_id"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Name: City Plaza"
        android:layout_below="@+id/medicine_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>



    <TextView
        android:id="@+id/quantity"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginStart="30dp"
        android:text="Purpose: N/A"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/certificate_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView

        android:layout_centerHorizontal="true"
        android:id="@+id/message"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginStart="30dp"
        android:text="Thank You for Requesting"
        android:layout_marginTop="200dp"
        android:layout_below="@+id/certificate_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView

        android:layout_centerHorizontal="true"
        android:id="@+id/message_2"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginStart="30dp"
        android:text="Wait fot 1 - 3 days for the reply via text or email"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:id="@+id/start_date"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginStart="30dp"
        android:text="Start Date : Jan, 31, 2002"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView

        android:id="@+id/start_time"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginStart="30dp"
        android:text="Start Time: "
        android:layout_marginTop="10dp"
        android:layout_below="@+id/start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView

        android:id="@+id/end_time"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginStart="30dp"
        android:text="End Time: "
        android:layout_marginTop="10dp"
        android:layout_below="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_marginTop="150dp"
        android:textSize="16sp"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="Go Home"
        android:background="@drawable/login_btn_bg"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/message_2"
        android:layout_width="350dp"
        android:layout_height="50dp">

    </TextView>

    <include
        layout="@layout/_layout_navigation_bar"
        android:id="@+id/buttom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
