<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ui.content.official.ui.OfficialContentView"
    android:background="#C4C4C4">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A4A4A4" />

    <RelativeLayout
        android:background="#2260FF"
        android:layout_width="match_parent"
        android:layout_height="280dp">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/white_bg"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Left Arrow Button -->
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/grey_bg"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_keyboard_arrow_left_24" />
        </RelativeLayout>

        <!-- Centered Breaking News Text -->
        <TextView
            android:text="Barangay Official Details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black" />

        <!-- Notification Button -->
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/grey_bg"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="0dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_notifications_none_24"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:src="@drawable/daniel"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:background="@drawable/circle_image"
        android:elevation="10dp"/>

    <RelativeLayout
        android:id="@+id/_nameContainer"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/_nameProfile"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Wren Montero Javier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/_nameProfile"
                android:id="@+id/_contactNumberText"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="SK, Kagawad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </RelativeLayout>



    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="20dp"
        android:id="@+id/scrollView"
        android:layout_below="@+id/_nameContainer"
        android:fillViewport="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/_emailIcon"
                        android:src="@drawable/baseline_email_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </ImageView>

                    <TextView
                        android:textColor="#403C3C"
                        android:layout_marginStart="5dp"
                        android:id="@+id/_emailText"
                        android:padding="2dp"
                        android:text="Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

                <EditText
                    android:textAlignment="textEnd"
                    android:layout_marginTop="20dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="false"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="javierrenren1@gmail.com"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"

                    android:layout_height="50dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView

                        android:src="@drawable/baseline_person_24_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </ImageView>

                    <TextView
                        android:textColor="#403C3C"
                        android:layout_marginStart="5dp"
                        android:padding="2dp"
                        android:text="Gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

                <EditText
                    android:textAlignment="textEnd"
                    android:layout_marginTop="20dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="false"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="Male"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"

                    android:layout_height="50dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView

                        android:src="@drawable/baseline_location_on_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </ImageView>

                    <TextView
                        android:textColor="#403C3C"
                        android:layout_marginStart="5dp"
                        android:padding="2dp"
                        android:text="Purok Area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

                <EditText
                    android:textAlignment="textEnd"
                    android:layout_marginTop="20dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="false"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="Purok 2"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"

                    android:layout_height="50dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView

                        android:src="@drawable/baseline_edit_calendar_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </ImageView>

                    <TextView
                        android:textColor="#403C3C"
                        android:layout_marginStart="5dp"
                        android:padding="2dp"
                        android:text="Birth Date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

                <EditText
                    android:textAlignment="textEnd"
                    android:layout_marginTop="20dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="false"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="Jan 31, 2002"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"

                    android:layout_height="50dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView

                        android:src="@drawable/baseline_edit_calendar_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </ImageView>

                    <TextView
                        android:textColor="#403C3C"
                        android:layout_marginStart="5dp"
                        android:padding="2dp"
                        android:text="Term Start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

                <EditText
                    android:textAlignment="textEnd"
                    android:layout_marginTop="20dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="false"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="May 5, 2016"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"

                    android:layout_height="50dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView

                        android:src="@drawable/baseline_edit_calendar_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </ImageView>

                    <TextView
                        android:textColor="#403C3C"
                        android:layout_marginStart="5dp"
                        android:padding="2dp"
                        android:text="Term End"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

                <EditText
                    android:textAlignment="textEnd"
                    android:layout_marginTop="20dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="false"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="May 5, 2025"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"

                    android:layout_height="50dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView

                        android:src="@drawable/baseline_person_24_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </ImageView>

                    <TextView
                        android:textColor="#403C3C"
                        android:layout_marginStart="5dp"
                        android:padding="2dp"
                        android:text="Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

                <EditText
                    android:textAlignment="textEnd"
                    android:layout_marginTop="20dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="false"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:drawableEnd="@drawable/baseline_circle_24_green"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"

                    android:layout_height="50dp"/>

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

    <include
        layout="@layout/_layout_navigation_bar"
        android:id="@+id/buttom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>