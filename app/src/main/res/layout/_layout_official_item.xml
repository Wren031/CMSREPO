<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
                android:padding="10dp"
             android:layout_height="180dp">



    <RelativeLayout

        android:background="#1877F2"
        android:layout_width="180dp"
        android:layout_height="170dp">

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/_nameOfficial"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Javier, Wren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:layout_centerHorizontal="true"
            android:textSize="10sp"
            android:layout_below="@+id/_nameOfficial"
            android:id="@+id/_namePossition"
            android:textColor="@color/white"
            android:text="SK, Kagawad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <ImageView
            android:id="@+id/_imageOfficial"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:layout_gravity="center"
            android:background="@drawable/circle_image"
            android:elevation="10dp"
            android:layout_below="@+id/_namePossition"
            android:layout_centerHorizontal="true"
            android:src="@drawable/daniel"
            android:layout_width="70dp"
            android:layout_height="70dp">

        </ImageView>

        <RelativeLayout
            android:layout_marginTop="65dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/_imageOfficial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_centerHorizontal="true">

            <!-- Status Section -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/_statusOfficial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/_status_iconOfficial"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_below="@id/_statusOfficial"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/baseline_circle_24" />
            </RelativeLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/black"
                android:layout_marginEnd="20dp" />

            <!-- Age Section -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/_ageOfficial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:layout_marginStart="4dp"
                    android:id="@+id/_age_valueOfficial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/_ageOfficial"
                    android:text="21"
                    android:textColor="@color/black"
                    android:textSize="8sp" />
            </RelativeLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/black"
                android:layout_marginEnd="20dp" />

            <!-- You can add another section here if needed -->


            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/_view"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:text="View"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/_viewBntOfficial"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/baseline_remove_red_eye_24"
                    android:textSize="8sp"
                    android:layout_below="@id/_view"
                    android:text="Details"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>