<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:paddingEnd="16dp">

        <!-- Image -->
        <ImageView
            android:id="@+id/_residentImage"
            android:src="@drawable/baseline_person_pin_24"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"/>

        <!-- Resident Information -->
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- Name -->
            <TextView
                android:id="@+id/_name"
                android:layout_marginStart="0dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Wren Montero Javier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Message -->
            <TextView
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="0dp"
                android:layout_below="@id/_name"
                android:id="@+id/_messageTextID"
                android:text="Hello Dear.."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <!-- Time and Quantity Section -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <!-- Time -->
            <TextView
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/_timeID"
                android:text="5 min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Quantity -->
            <TextView
                android:padding="1dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/login_btn_bg"
                android:layout_below="@id/_timeID"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/_quantityID"
                android:text="1"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
